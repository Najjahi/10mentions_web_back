
{% extends 'base.html.twig' %}

{% block title %}Profile index{% endblock %}

{% block main %}
    <h1>Profile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Pr√©nom</th>
                <th>Description</th>
                <th>DateBirth</th>
                <th>CreatedAt</th>
                <th>Updatedat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% if profiles is empty %}
            <tr>
                <td colspan="10" class="alert alert-warning text-center"><a href="{{path('app_profile_new')}} "> Alimentez votre profile</a></td>
            </tr>
            {% else %}
                {% for profile in profiles %}
                <tr>
                    <td>{{ profile.id }}</td>
                    <td> <img src="{{ asset('assets/uploads/images/' ~ profile.picture) }}" alt="" class="img-fluid"></td>
                    <td>{{ profile.user.firstName }}</td>
                    <td>{{ profile.description }}</td>
                    <td>{{ profile.dateBirth ? profile.dateBirth|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ profile.createdAt ? profile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ profile.updatedat ? profile.updatedat|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_profile_edit', {'id': profile.id}) }}">edit</a>
                </td>
            </tr>
            {% endfor %}

            {% endif %}
       
       
           
        </tbody>
    </table>

   
{% endblock %}
